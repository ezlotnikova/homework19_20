<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="1" author="e.zlotnikova@gmail.com">
        <createTable tableName="user">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="varchar(40)"/>
            <column name="password" type="varchar(80)"/>
            <column name="role" type="varchar(40)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="e.zlotnikova@gmail.com">
        <addUniqueConstraint
                columnNames="username"
                constraintName="username_unique_constraint"
                tableName="user"/>
    </changeSet>
    <changeSet id="3" author="e.zlotnikova@gmail.com">
        <insert tableName="user">
            <column name="username" value="user"/>
            <column name="password" value="$2y$12$WIhLk4UgOqsZOhPsyE.8Su65nb6KaS1TlhX9DTz6owj5wMOlgshOm"/>
            <column name="role" value="USER"/>
        </insert>
    </changeSet>
    <changeSet id="4" author="e.zlotnikova@gmail.com">
        <insert tableName="user">
            <column name="username" value="admin"/>
            <column name="password" value="$2y$12$Z5tK1aWIzGDqcocKFIMwo.fzk9DPPNz2KIZRyiWhYaMxszR8JRM0C"/>
            <column name="role" value="ADMIN"/>
        </insert>
    </changeSet>
    <changeSet id="5" author="e.zlotnikova@gmail.com">
        <createTable tableName="item">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(40)"/>
            <column name="status" type="varchar(40)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>